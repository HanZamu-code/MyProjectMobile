<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgrounda"
    tools:context=".AdminActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="300dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_height="60dp"
        android:text="iCare"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/costumebg2"
        android:elevation="15dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_rumahsakit"
        android:layout_below="@+id/judul"
        android:layout_marginTop="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/home"
        app:civ_circle_background_color="#fff" />

    <TextView
        android:id="@+id/nama_rumah"
        android:layout_below="@+id/img_rumahsakit"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:text="Nama Rumah sakit"
        android:textColor="#fff"
        android:background="@drawable/costumebg1"
        android:elevation="15dp"
        android:textSize="17sp"
        tools:ignore="RtlCompat" />

    <ListView
        android:id="@+id/listNamaRumahsakit"
        android:layout_below="@+id/nama_rumah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="13dp"/>

    <Button
        android:id="@+id/btncreate"
        android:layout_below="@+id/nama_rumah"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="260dp"
        android:drawableLeft="@drawable/add"
        android:layout_marginStart="270dp"
        tools:ignore="RtlCompat" />
</RelativeLayout>